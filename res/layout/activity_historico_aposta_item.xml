                android:layout_height="wrap_content"
                android:text="" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="15dp"
                android:layout_gravity="center"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceSmall" />
