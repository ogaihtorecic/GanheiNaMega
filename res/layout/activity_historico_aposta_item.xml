                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/concurso" />

            <TextView
                android:id="@+id/lb_dezenas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dezenas" />

        </TableRow>

